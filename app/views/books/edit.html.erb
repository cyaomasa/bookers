<body>
<h1>Editing Book</h1>

<% if @book.errors.any? %>
　 <h4><%= '2 errors prohibited this book from being saved:' %></h4>
　 <li>Title can't be blank</li>
　 <li>Body can't be blank</li>
 <% end %>

<%= form_with model: @book do |f| %>
<p>Title<br><%= f.text_field :title %></br></p>


<p>Body<br><%= f.text_area :body %></br></p>

<p><%= f.submit 'Update Book' %></p>

<p><%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %></p>

<% end %>

</body>